<!DOCTYPE html>
<html lang="en" dir="ltr" data-scompiler-id="0">
    <!-- Mirrored from stroyka-admin.html.themeforest.scompiler.ru/variants/ltr/app-category.html by HTTrack Website Copier/3.x [XR&CO'2014], Thu, 13 Jan 2022 21:41:08 GMT -->
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="format-detection" content="telephone=no" />
        <title>Category</title>
        <%- include('partials/fileContainerCss.ejs') %>
    </head>
    <style>
        .hidden{display:none;}
    </style>
    <body>
        <!-- sa-app -->
        <div class="sa-app sa-app--desktop-sidebar-shown sa-app--mobile-sidebar-hidden sa-app--toolbar-fixed">
            <!-- sa-app__sidebar -->
            <%- include('partials/sidebar.ejs') %>
            <!-- sa-app__sidebar / end --><!-- sa-app__content -->
            <div class="sa-app__content">
                <!-- sa-app__toolbar -->
                <%- include('partials/toolbar.ejs')%>
                <!-- sa-app__toolbar / end --><!-- sa-app__body -->
                <form method="POST" action="<%- url %>" class="new_category_form" encType="multipart/form-data">
                  <div id="top" class="sa-app__body">
                      <div class="mx-sm-2 px-2 px-sm-3 px-xxl-4 pb-6">
                          <div class="container container--max--xl">
                              <div class="py-5">
                                  <div class="row g-4 align-items-center">
                                      <div class="col">
              
                                          <h1 class="h3 m-0">Add new Category</h1>
                                      </div>
                                      <div class="col-auto d-flex"><a href="#" class="btn btn-secondary me-3">Duplicate</a><button type="submit" value="Submit"class="btn btn-primary">Save</button></div>
                                  </div>
                              </div>
                              <div class="sa-entity-layout" data-sa-container-query='{"920":"sa-entity-layout--size--md","1100":"sa-entity-layout--size--lg"}'>
                                  <div class="sa-entity-layout__body">
                                      <div class="sa-entity-layout__main">
                                          <div class="card">
                                              <div class="card-body p-5">
                                                  <div class="mb-5"><h2 class="mb-0 fs-exact-18">Basic information</h2></div>
                                                  <div class="mb-4"><label for="form-category/name" class="form-label">Name</label><input type="text" value="<%- category.name %>"class="form-control" id="form-category/name" name="name" onfocusout="validateName('form-category/name','categoryNameAlert','category_slug')" required /><!--createSlug(this,'category_slug')-->
                                                  <p>
                                                      <small class="categoryNameAlert"style="color:red"></small>
                                                  </p>
                                                  </div>
                                                  <div class="mb-4">
                                                      <label for="form-category/slug" class="form-label">Slug</label>
                                                      <div class="input-group input-group--sa-slug">
                                                          <span class="input-group-text" id="form-category/slug-addon">https://calligraphyides.com/catalog/</span>
                                                          <input type="text" name="slug" class="form-control category_slug" id="form-category/slug" aria-describedby="form-category/slug-addon form-category/slug-help" value="<%- category.slug %>"  required />
                                                      </div>
                                                      <div id="form-category/slug-help" class="form-text">Unique human-readable category identifier. No longer than 255 characters.</div>
                                                  </div>
                                                  <div class="mb-4 container">
                                                    <label for="form-category/description" class="form-label">Description</label>
                                                    <textarea id="form-category/description" class="sa-quill-control "name="description" rows="8">
                                                    <%- category.description %>
                                                    </textarea>
                                                  </div>
                                              </div>
                                          </div>
                                          <div class="card mt-5">
                                              <div class="card-body p-5">
                                                  <div class="mb-5">
                                                      <h2 class="mb-0 fs-exact-18">Search engine optimization</h2>
                                                      <div class="mt-3 text-muted">Provide information that will help improve the snippet and bring your category to the top of search engines.</div>
                                                  </div>
                                                  <div class="mb-4"><label for="form-category/seo-title" class="form-label" >Page title</label><input type="text" class="form-control" id="form-category/seo-title" name="seoPageTitle" value="<%- category.seoPageTitle %>"/></div>
                                                  <div><label for="form-category/seo-description" class="form-label">Meta description</label><textarea id="form-category/seo-description" class="form-control" rows="2" name="seoMetaDescription"><%- category.seoMetaDescription %></textarea></div>
                                              </div>
                                          </div>
                                      </div>
                                      <div class="sa-entity-layout__sidebar">
                                          <div class="card w-100">
                                              <div class="card-body p-5">
                                                  <div class="mb-5"><h2 class="mb-0 fs-exact-18">Visibility</h2></div>
                                                  <div class="mb-4 category_visibility">
                                                      <label class="form-check"><input type="radio" class="form-check-input" name="visibility_type" value="Published" onChange="Visibility1('category_visibility','category_publish_date','category_publish_date_hidden')"checked/><span class="form-check-label">Published</span></label>
                                                      <label class="form-check"><input type="radio" class="form-check-input" name="visibility_type" value="Scheduled" onChange="Visibility1('category_visibility','category_publish_date','category_publish_date_hidden')" /><span class="form-check-label">Scheduled</span></label>
                                                      <label class="form-check mb-0"><input type="radio" class="form-check-input" name="visibility_type" value="Hidden"onChange="Visibility1('category_visibility','category_publish_date','category_publish_date_hidden')" /><span class="form-check-label">Hidden</span></label>
                                                  </div>
                                                  <div class="category_publish_date category_publish_date_hidden">
                                                      <label for="form-category/seo-title" class="form-label">Publish date</label>
                                                      <input type="text" class="form-control datepicker-here" id="form-category/publish-date" data-auto-close="true" data-language="en" name="publish_at" value="<%- category.publish_at %>"/>
                                                      <p>
                                                          <!-- <small style="color:red">Please fill schedule date</small> --></p>
                                                      <div class="form-text">The category will not be visible until the specified date.</div>
                                                  </div>
                                              </div>
                                          </div>
                                          <div class="card w-100 mt-5">
                                              <div class="card-body p-5">
                                                  <div class="mb-5"><h2 class="mb-0 fs-exact-18">Parent category</h2></div>
                                                  <select class="sa-select2 form-select" name="parentCategory"required>
                                                    <option selected="">none</option>

                                                    <% for(let categor of categories) { %>
                                                        <% if(categor.name == category.parentCategory) { %>
                                                        <option selected=""><%- categor.name %></option>  
                                                        <% } %>
                                                        


                                                        <option><%- categor.name %></option>  
                                                    <% } %>
                                                    
                                                      
                                                  </select>
                                                  <div class="form-text">Select a category that will be the parent of the current one.</div>
                                              </div>
                                          </div>

                                  
                                          <div class="card mt-5">
                                            <div class="card w-100 ">
                                                <div class="card-body p-5">
                                                    <div class="mb-5"><h2 class="mb-0 fs-exact-18">Keywords</h2></div>
                                                    <select class="sa-select2 form-select" name="keywords" data-tags="true" multiple="">
                                                       <% for(let i=0;i<category.keywords.length;i++) {%>
                                                        <option selected=""><%- category.keywords[i] %></option>
                                                        <% } %>
                                                    </select>
                                                </div>
                                            </div>
                                            </div>




                                          <%  for(i=1;i<=noOfImages;i++) { %>
                                          <div class="card w-100 mt-5">
                                              <div class="card-body p-5">
                                                  <div class="mb-5"><h2 class="mb-0 fs-exact-18">Image</h2></div>
                                                  <div class="border p-4 d-flex justify-content-center">
                                                    
                                                      <div class="max-w-20x"><img src="<%- imageUrl %><%- category.image[i-1] %>" class="w-100 h-auto category_logo_img_show<%- i %>" width="320" height="320" alt="" /></div>
                                                      <input type="file" multiple="multiple" id="category_image<%- i %>" name="image<%-i%>"value="<%- category.image[i-1] %>" onChange="uploadImage(this,'category_logo_img<%- i %>','category_logo_img_show<%- i %>','category_image_validation<%- i %>')" class="category_logo_img<%- i %> hidden" accept="image" >
                                                  </div>
                                                  <small style="color:red" class="category_image_validation<%- i %>"></small>
                                                  <div class="mt-4 mb-n2"><a href="#" class="me-3 pe-2"> <label for="category_image<%- i%>">Add image</label></a><a href="#" class="text-danger me-3 pe-2"onClick="resetImage('category_logo_img_show<%- i %>')">Remove image</a></div>
                                              </div>
                                          </div>
                                   
                                          <% } %>
                                      </div>    
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
              </form>
           
                <!-- sa-app__body / end --><!-- sa-app__footer -->
               <% include('partials/footer.ejs')%>
                <!-- sa-app__footer / end -->
            </div>

            <!-- sa-app__content / end --><!-- sa-app__toasts -->
            <div class="sa-app__toasts toast-container bottom-0 end-0"></div>
            <!-- sa-app__toasts / end -->
        </div>
        <!-- sa-app / end --><!-- scripts -->
        <%- include('partials/fileContainerJs.ejs')%>

    </body>
