             <div class="col-md-6 col-sm-12 col-xs-12 col-lg-6 col-xl-6 mt-5 product-summary">
              <form method="post" action="/products/add-to-cart/<%- product.id %>">    
              <div class="product-detail">
                        <h2><%- product.title %></h2>
                        </div>
                        <div class="color-swatch">
                          <select name="variant" id="variant" class="mr-3">
                             <%  count=0; for(let option of product.options){ count++  %>
                                <option>variant<%- count %></option>
                              <% } %>
                          </select>
                      </div> 
                   
                    
                 
                    
                      <div class="product-props">
                        <% count=0; for(let option of product.options) {  count++ %>
                        <div class="color-swatch variant<%-count%>x">
                          <div class="product-price m_t_10 ">
                          
                            <span >handWritten price</span>
                            <input type="text" name="price" class="product-amount">&#8377;<%- option.price.handWrittenPrice %></span>
                            
                        </div>
                            <select name="Colors" id="colors" class="mr-3  ">
                              <% var len=option.colors.length; for(i=0;i<len;i++) { %>
                                <option value="<%- option.colors[i] %>"><%- option.colors[i] %></option>
                                <% } %>
                            </select>
                            <select name="size" id="size" class="mr-3  ">
                              <% var len=option.size.length; for(i=0;i<len;i++) { %>
                                <option value="<%- option.size[i] %>"><%- option.size[i] %></option>
                                <% } %> 
                            </select>
                            <select name="material" id="material" class="mr-3  ">
                              <% var len=option.material.length; for(i=0;i<len;i++) { %>
                                <option value="<%- option.material[i] %>"><%- option.material[i] %></option>
                                <% } %>
                            </select>
                          </div>  
                      <% } %>
                      <div class="cart-input-container d-flex">
                        <button class="input-decrement input-operator input-element" onclick="">-</button>                                    
                        <input type="number" name="cart-quantity-range" id="cart-quantity-range" step="1" value="1" min="1" max="20" /> <button class="input-increment input-operator input-element" onclick="">+</button>
                    </div>
                
                        <div class="add_cart">
                            <button type="submit" href="" class="btn-white add-to-cart" >Add to cart</button>
                            <a href="" class="btn-black buy-now">Buy now</a>
                        </div>
                       
                        <button class="mt-3 wishlist">
                            <span><i class="bi-heart"></i></span> Add to Wishlist
                        </button>
                    </div>
               </form>
                  </div> 
                
            </div>
        </div>
    </div>
</section>

