        $('.related_product_slider').slick({
		  slidesToShow:3,
		  slidesToScroll: 3,
          infinite:true,
          Horizontal: true,
		  arrows:false,	   
		  centerMode: false,		  
		  focusOnSelect: true,
		   
		});
    const counter = document.querySelector('#cart-quantity-range')
    const decrement = document.querySelector('.input-decrement')
    const increment = document.querySelector('.input-increment')
    
    const operator = document.querySelectorAll('.input-operator')
    
    let count = counter.value
    operator.forEach((operator)=>{
        operator.addEventListener('click',()=>{
    
            if(operator.classList.contains('input-decrement')){
                // console.log("decrement")
                if(count>1){
                    count--
                }
            }
            
            if(operator.classList.contains('input-increment')){
                // console.log("increment")
                count++
            }
            counter.value = count
        })
    })
    
    
    function Activating_tabbings(args,args2 ){
        
        document.querySelectorAll('.check_div_product_detail').forEach((item)=>
        {
            item.classList.remove('active')
        })
        document.querySelectorAll('.title').forEach((items)=>
        {
            items.classList.remove('active_button')
        })
        document.querySelector(`.${args}`).classList.add("active")
        document.querySelector(`.${args2}`).classList.add("active_button")
    }
  </script>
    
    
            
    
    
